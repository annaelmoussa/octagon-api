---
import data from '@db/rankings.json'

const divisionData = data.map(({ id, categoryName, champion }) => {
  const championImg = champion.id ? champion.id + '.webp' : 'fighter-placeholder.svg'
  return { route: `division/${id}`, categoryName, championImg }
})
---

<ul>
  {
    divisionData.map(({ route, championImg, categoryName }) => (
      <>
        <li>
          <a href={route}>{categoryName}</a>
          <img
            src={`/fighters/${championImg}`}
            alt=''
          />
        </li>
      </>
    ))
  }
</ul>

<style>
  ul {
    width: 100%;
    display: grid;

    gap: 1rem;
    list-style: none;
    grid-auto-rows: 10rem;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, 13rem), 1fr));
    justify-content: center;
  }
  li {
    display: flex;
    position: relative;
    background: #001219;
    background: var(--color-gradient-1);
    border-radius: 5px;
    transition: transform 0.3s;
  }
  a {
    color: white;
    font-size: 1.4rem;
    font-weight: 600;
    text-align: center;
    text-shadow: 0px 0px 5px black, 1px 1px 5px black, 2px 2px 5px black;

    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 1rem;
    z-index: 1;
  }
  img {
    height: 8.8rem;
    position: absolute;
    filter: sepia(0.7);
    bottom: 0;
    left: 0;
  }

  @media (hover: hover) {
    li:hover {
      transform: scale(1.05);
    }
  }
</style>
