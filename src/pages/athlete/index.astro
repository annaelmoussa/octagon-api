---
import Layout from '@layouts/Layout.astro'
import AthleteFilter from '@components/AthleteFilter.svelte'

interface Props {
  athlete: string
}
---

<Layout
  title='Athletes'
  description='MMA current athlete list. Search by name and sort them by information.'
>
  <main>
    <h1>Athlete list</h1>
    <AthleteFilter client:only='svelte' />
  </main>
</Layout>

<style>
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  main {
    align-items: flex-start;
    gap: 1rem;
  }

  @media (width < 48rem) {
    main {
      --section-width: 100%;
      padding-inline: 1rem;
    }
  }
</style>
