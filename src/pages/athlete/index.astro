---
import Layout from '@layouts/Layout.astro'
import data from '@db/fighters.json'

interface Props {
  athlete: string
}

const navigationLinks = Object.keys(data).map((fighterId) => {
  return { route: `athlete/${fighterId}`, label: fighterId }
})
---

<Layout title='Athletes | UFC API'>
  <main>
    <h1>Athlete list</h1>
    <ul>
      {
        navigationLinks.map(({ route, label }) => (
          <li>
            <a href={route}>{label}</a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  h1 {
    font-size: 3rem;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    list-style: none;
  }
  li {
    font-size: 1.4rem;
  }
</style>
